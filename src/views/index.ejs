<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Sistem Absensi XI Pemasaran</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 text-gray-800">
    <nav class="bg-blue-600 text-white shadow-md">
        <div class="container mx-auto px-4 py-3 flex flex-wrap items-center justify-between">
            <a href="/" class="text-xl font-semibold hover:text-blue-300">Sistem Absensi XI Pemasaran</a>
            <button id="nav-toggle" class="block lg:hidden focus:outline-none">
                <i class="fas fa-bars text-2xl"></i>
            </button>
            <div id="nav-content" class="hidden w-full lg:flex lg:items-center lg:w-auto">
                <ul class="lg:flex lg:space-x-6">
                    <li><a href="/students" class="block px-3 py-2 rounded hover:bg-blue-500">Data Siswa</a></li>
                    <li><a href="/attendance" class="block px-3 py-2 rounded hover:bg-blue-500">Absensi</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container mx-auto px-4 mt-6">
        <section class="bg-white rounded-lg shadow-md p-6 mb-6">
            <h4 class="text-xl font-semibold mb-4">Dashboard Absensi - <%= currentMonth %></h4>
            <div class="flex flex-col lg:flex-row gap-6">
                <div class="flex-1">
                    <canvas id="attendanceChart"></canvas>
                </div>
                <div class="flex-1 grid grid-cols-1 sm:grid-cols-2 gap-4">
                    <div class="flex items-center gap-3 p-4 bg-gray-100 rounded shadow">
                        <i class="fas fa-check-circle text-green-500 text-2xl"></i>
                        <span class="font-medium text-gray-700">Hadir: <%= stats.hadir %></span>
                    </div>
                    <div class="flex items-center gap-3 p-4 bg-yellow-100 rounded shadow">
                        <i class="fas fa-clock text-yellow-500 text-2xl"></i>
                        <span class="font-medium text-gray-700">Terlambat: <%= stats.terlambat %></span>
                    </div>
                    <div class="flex items-center gap-3 p-4 bg-blue-100 rounded shadow">
                        <i class="fas fa-procedures text-blue-500 text-2xl"></i>
                        <span class="font-medium text-gray-700">Sakit: <%= stats.sakit %></span>
                    </div>
                    <div class="flex items-center gap-3 p-4 bg-indigo-100 rounded shadow">
                        <i class="fas fa-envelope text-indigo-500 text-2xl"></i>
                        <span class="font-medium text-gray-700">Izin: <%= stats.izin %></span>
                    </div>
                    <div class="flex items-center gap-3 p-4 bg-red-100 rounded shadow">
                        <i class="fas fa-times-circle text-red-500 text-2xl"></i>
                        <span class="font-medium text-gray-700">Alfa: <%= stats.alfa %></span>
                    </div>
                </div>
            </div>
        </section>

        <section class="bg-white rounded-lg shadow-md p-6">
            <h4 class="text-xl font-semibold mb-4">Absensi Hari Ini</h4>
            <div class="overflow-x-auto">
                <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                    <thead class="bg-gray-100 border-b border-gray-300">
                        <tr>
                            <th class="text-left py-2 px-4 border-r border-gray-300">No</th>
                            <th class="text-left py-2 px-4 border-r border-gray-300">Nama Siswa</th>
                            <th class="text-left py-2 px-4 border-r border-gray-300">Status</th>
                            <th class="text-left py-2 px-4 border-r border-gray-300">Keterangan</th>
                            <th class="text-left py-2 px-4">Aksi</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% students.forEach((student, index) => { %>
                            <tr class="border-b border-gray-200 hover:bg-gray-50">
                                <td class="py-2 px-4 border-r border-gray-300"><%= index + 1 %></td>
                                <td class="py-2 px-4 border-r border-gray-300 flex items-center">
                                    <% if (student.profilePicture) { %>
                                        <img src="/uploads/<%= student.profilePicture %>" alt="<%= student.name %>" class="w-10 h-10 rounded-full object-cover mr-3" />
                                    <% } %>
                                    <span><%= student.name %></span>
                                </td>
                                <td class="py-2 px-4 border-r border-gray-300">
                                    <select class="attendance-status border border-gray-300 rounded px-2 py-1 w-full" data-student-id="<%= student.id %>">
                                        <option value="hadir">Hadir</option>
                                        <option value="terlambat">Terlambat</option>
                                        <option value="sakit">Sakit</option>
                                        <option value="izin">Izin</option>
                                        <option value="alfa">Alfa</option>
                                    </select>
                                </td>
                                <td class="py-2 px-4 border-r border-gray-300">
                                    <input type="text" class="attendance-notes border border-gray-300 rounded px-2 py-1 w-full" data-student-id="<%= student.id %>" placeholder="Keterangan" />
                                </td>
                                <td class="py-2 px-4">
                                    <button class="save-attendance bg-blue-600 hover:bg-blue-700 text-white text-sm font-semibold rounded px-3 py-1" data-student-id="<%= student.id %>">
                                        Simpan
                                    </button>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/main.js"></script>

    <script>
        // Mobile menu toggle
        const navToggle = document.getElementById('nav-toggle');
        const navContent = document.getElementById('nav-content');
        navToggle.addEventListener('click', () => {
            navContent.classList.toggle('hidden');
        });
    </script>
</body>
</html>
