<!DOCTYPE html>
<html lang="id" class="scroll-smooth">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Rekap Absensi Bulanan</title>
    <style>
        #signature-pad {
            @apply border border-gray-300 rounded-lg w-full h-48 bg-white cursor-crosshair;
        }
    </style>
    <link href="/css/style.css" rel="stylesheet" />
</head>
<body class="bg-gray-50 text-gray-800">
    <main class="container mx-auto px-4 mt-6">
        <h3 class="text-xl font-semibold mb-4">
            <% if (startDate && endDate) { %>
                Rekap Absensi dari <%= startDate %> sampai <%= endDate %> - <%= kelas %>
            <% } else { %>
                Rekap Absensi Bulanan <%= kelas %> - <%= month %>/<%= year %>
            <% } %>
        </h3>
        <button id="current-month-rekap" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded mb-4">
            Rekap Bulan Ini
        </button>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg">
                <thead class="bg-gray-100 border-b border-gray-300">
                    <tr>
                        <th class="text-left py-2 px-4 border-r border-gray-300">No</th>
                        <th class="text-left py-2 px-4 border-r border-gray-300">Nama Siswa</th>
                        <th class="text-left py-2 px-4 border-r border-gray-300">Hadir</th>
                        <th class="text-left py-2 px-4 border-r border-gray-300">Terlambat</th>
                        <th class="text-left py-2 px-4 border-r border-gray-300">Sakit</th>
                        <th class="text-left py-2 px-4 border-r border-gray-300">Izin</th>
                        <th class="text-left py-2 px-4 border-gray-300">Alfa</th>
                    </tr>
                </thead>
                <tbody>
                    <% rekap.forEach((r, i) => { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-2 px-4 border-r border-gray-300"><%= i+1 %></td>
                            <td class="py-2 px-4 border-r border-gray-300"><%= r.student.name %></td>
                            <td class="py-2 px-4 border-r border-gray-300"><%= r.hadir %></td>
                            <td class="py-2 px-4 border-r border-gray-300"><%= r.terlambat %></td>
                            <td class="py-2 px-4 border-r border-gray-300"><%= r.sakit %></td>
                            <td class="py-2 px-4 border-r border-gray-300"><%= r.izin %></td>
                            <td class="py-2 px-4 border-gray-300"><%= r.alfa %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
        <div class="flex flex-col md:flex-row mt-8 gap-6">
            <div class="flex-1">
                <p>Wali Kelas: <b><%= waliKelas %></b></p>
                <canvas id="signature-pad" class="border border-gray-300 rounded-lg w-full h-48 bg-white cursor-crosshair"></canvas>
                <button class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-4 rounded mt-2" id="clear-signature">Bersihkan Tanda Tangan</button>
            </div>
            <div class="flex-1 flex items-end justify-end">
                <button class="bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded" id="print-rekap">Cetak Rekap</button>
            </div>
        </div>
    </main>
<script>
// Signature pad
const canvas = document.getElementById('signature-pad');
const ctx = canvas.getContext('2d');
let drawing = false;
canvas.addEventListener('mousedown', e => { drawing = true; ctx.beginPath(); });
canvas.addEventListener('mouseup', e => { drawing = false; });
canvas.addEventListener('mouseout', e => { drawing = false; });
canvas.addEventListener('mousemove', draw);
function draw(e) {
    if (!drawing) return;
    const rect = canvas.getBoundingClientRect();
    ctx.lineWidth = 2;
    ctx.lineCap = 'round';
    ctx.strokeStyle = '#222';
    ctx.lineTo(e.clientX - rect.left, e.clientY - rect.top);
    ctx.stroke();
    ctx.beginPath();
    ctx.moveTo(e.clientX - rect.left, e.clientY - rect.top);
}
document.getElementById('clear-signature').onclick = function() {
    ctx.clearRect(0, 0, canvas.width, canvas.height);
};

// Print rekap
function printRekap() {
    const printContents = document.body.innerHTML;
    const signatureData = canvas.toDataURL();
    const signatureImg = `<img src='${signatureData}' style='width:300px; border:1px solid #ccc; margin-top:20px;'>`;
    const rekapTable = document.querySelector('.table-responsive').outerHTML;
    const waliKelas = document.querySelector('p').outerHTML;
    const newWin = window.open('', '', 'width=900,height=700');
    newWin.document.write('<html><head><title>Rekap Absensi</title>');
    newWin.document.write('<link href="/css/style.css" rel="stylesheet">');
    newWin.document.write('</head><body>');
    newWin.document.write(`<h3>
      ${startDate && endDate ? `Rekap Absensi dari ${startDate} sampai ${endDate} - ${kelas}` : `Rekap Absensi Bulanan ${kelas} - ${month}/${year}`}
    </h3>`);
    newWin.document.write(rekapTable);
    newWin.document.write(waliKelas);
    newWin.document.write(signatureImg);
    newWin.document.write('</body></html>');
    newWin.document.close();
    newWin.print();
}
document.getElementById('print-rekap').onclick = printRekap;
</script>
<script>
  document.getElementById('current-month-rekap').addEventListener('click', () => {
    const now = new Date();
    const year = now.getFullYear();
    const month = now.getMonth();
    const start = new Date(year, month, 1).toISOString().slice(0, 10);
    const end = new Date(year, month + 1, 0).toISOString().slice(0, 10);
    const url = `/attendance/rekap-range?start=${start}&end=${end}`;
    window.location.href = url;
  });
</script>
</body>
</html>
