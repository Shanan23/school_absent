<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistem Absensi XI Pemasaran</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <%- include('partials/header') %>

    <div class="container mt-4">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Dashboard Absensi - <%= currentMonth %></h4>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <canvas id="attendanceChart"></canvas>
                            </div>
                            <div class="col-md-6">
                                <div class="stats-container">
                                    <div class="stat-item">
                                        <i class="fas fa-check-circle text-success"></i>
                                        <span>Hadir: <%= stats.hadir %></span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-clock text-warning"></i>
                                        <span>Terlambat: <%= stats.terlambat %></span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-procedures text-info"></i>
                                        <span>Sakit: <%= stats.sakit %></span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-envelope text-primary"></i>
                                        <span>Izin: <%= stats.izin %></span>
                                    </div>
                                    <div class="stat-item">
                                        <i class="fas fa-times-circle text-danger"></i>
                                        <span>Alfa: <%= stats.alfa %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4>Absensi Hari Ini</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Nama Siswa</th>
                                        <th>Status</th>
                                        <th>Keterangan</th>
                                        <th>Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% students.forEach((student, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td>
                                                <% if (student.profilePicture) { %>
                                                    <img src="/uploads/<%= student.profilePicture %>" class="student-avatar" alt="<%= student.name %>">
                                                <% } %>
                                                <%= student.name %>
                                            </td>
                                            <td>
                                                <select class="form-select attendance-status" data-student-id="<%= student.id %>">
                                                    <option value="hadir">Hadir</option>
                                                    <option value="terlambat">Terlambat</option>
                                                    <option value="sakit">Sakit</option>
                                                    <option value="izin">Izin</option>
                                                    <option value="alfa">Alfa</option>
                                                </select>
                                            </td>
                                            <td>
                                                <input type="text" class="form-control attendance-notes" data-student-id="<%= student.id %>" placeholder="Keterangan">
                                            </td>
                                            <td>
                                                <button class="btn btn-primary btn-sm save-attendance" data-student-id="<%= student.id %>">
                                                    Simpan
                                                </button>
                                            </td>
                                        </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>
