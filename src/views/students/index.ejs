<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Daftar Siswa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
<div class="container mt-4">
    <h3>Daftar Siswa XI Pemasaran</h3>
    <table class="table table-bordered mt-3">
        <thead>
            <tr>
                <th>No</th>
                <th>Foto Profil</th>
                <th>Nama</th>
                <th>Ubah Foto Profil</th>
            </tr>
        </thead>
        <tbody>
            <% students.forEach((student, index) => { %>
            <tr>
                <td><%= index + 1 %></td>
                <td>
                    <% if (student.profilePicture) { %>
                        <img src="/uploads/<%= student.profilePicture %>" alt="Foto Profil" style="width: 80px; height: 80px; object-fit: cover; border-radius: 50%;" />
                    <% } else { %>
                        <span>Tidak ada foto</span>
                    <% } %>
                </td>
                <td><%= student.name %></td>
                <td>
                    <form action="/students/<%= student.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                        <input type="file" name="profilePicture" accept="image/*" required />
                        <button type="submit" class="btn btn-primary btn-sm mt-1">Upload</button>
                    </form>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
